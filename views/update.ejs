<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body mb-5">
      <h1 class="text-center mb-3">Update</h1>
      <%- include("./partials/messages") %>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof user.name != 'undefined' ? user.name : '' %>"
          />
        </div>
        <div class="form-group mt-3">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof user.email != 'undefined' ? user.email : '' %>"
          />
        </div>
        <div class="form-group mt-3">
          <label for="telephone">Telephone</label>
          <input
            type="text"
            id="telephone"
            name="telephone"
            class="form-control"
            placeholder="Enter phone number (Optional)"
            value="<%= typeof user.telephone != 'undefined' ? user.telephone : '' %>"
          />
        </div>
        <div class="form-group mt-3">
          <label for="website">Website</label>
          <input
            type="text"
            id="website"
            name="website"
            class="form-control"
            placeholder="Enter Website (Optional)"
            value="<%= typeof user.website != 'undefined' ? user.website : '' %>"
          />
        </div>
        <div class="form-group mt-3">
          <label for="twitter">Twitter</label>
          <input
            type="text"
            id="twitter"
            name="twitter"
            class="form-control"
            placeholder="Enter twitter @ account (Optional)"
            value="<%= typeof user.twitter != 'undefined' ? user.twitter : '' %>"
          />
        </div>
        <div class="form-group mt-3">
          <label for="instagram">Instagram</label>
          <input
            type="text"
            id="instagram"
            name="instagram"
            class="form-control"
            placeholder="Enter Instagram @ (Optional)"
            value="<%= typeof user.instagram != 'undefined' ? user.instagram : '' %>"
          />
        </div>
        <div class="form-group mt-3">
          <label for="facebook">Facebook</label>
          <input
            type="text"
            id="facebook"
            name="facebook"
            class="form-control"
            placeholder="Enter Facebook name (Optional)"
            value="<%= typeof user.facebook != 'undefined' ? user.facebook : '' %>"
          />
        </div>
        <div class="form-group mt-3">
          <label for="github">Github</label>
          <input
            type="text"
            id="github"
            name="github"
            class="form-control"
            placeholder="Enter Github @ (Optional)"
            value="<%= typeof user.github != 'undefined' ? user.github : '' %>"
          />
        </div>
        <%#
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Edit Password"
            value=""
          />
        </div>

        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm New Password"
            value=""
          />
        </div>
        %>
        <div class="d-grid">
          <button
            type="submit"
            class="btn btn-primary mt-3 mr-2"
            id="updateBtn"
          >
            Update
          </button>
          <a href="/dashboard" class="btn btn-secondary mt-2">Go Back</a>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/editProfile.js"></script>
